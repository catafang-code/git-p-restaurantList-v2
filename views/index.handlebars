<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="bi bi-search-heart"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant List -->
<div class="container mt-5">
  <div class="row row-cols-md-3 " id="data-panel" >
  <!-- LOOP restaurants HERE... -->
    {{#each restaurants}}
        <a href="/restaurants/{{this}}.id}}" class="text-secondary text-decoration-none ">
          <div class="card mb-3">
            <img class="card-img-top img-fluid" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>   
    {{/each}}
  </div> <!-- row end-->
</div>  <!-- container end-->

